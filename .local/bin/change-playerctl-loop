#!/bin/bash

output=$(playerctl loop)

case $output in
	None)
		echo "Current loop: NONE"
		playerctl loop Track
		;;
	Track)
		echo "Current loop: Track"
		playerctl loop Playlist
		;;
	Playlist)
		echo "Current loop: Playlist"
		playerctl loop None
		;;
esac
echo "Now loop state is: $(playerctl loop)"

