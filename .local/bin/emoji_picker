#!/bin/bash

#  "inspired" from this repo: https://github.com/LukeSmithxyz/voidrice/

# The famous "get a menu of emojis to copy" script.


# Get user selection via rofi from emoji file.
chosen=$(cut -d ';' -f1 ~/.local/share/unicode/emojis | \
        rofi  -dmenu -i -l 20 -p "Emoji picker" | \
        sed "s/\ .*//" )
[ -z "$chosen" ] && exit




# # If you run this command with an argument, it will automatically insert the
# # character. Otherwise, show a message that the emoji has been copied.
if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	printf "%s" "$chosen" | xclip -selection clipboard
	notify-send "'$chosen' copied to clipboard." \
        --app-name="Emoji picker" -i emoji-symbols-symbolic &
fi
